<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.CheckMessageActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_checkMessageStr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:text="메세지확인"
            android:textSize="22sp"
            android:textColor="@color/mainText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_filter"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@id/txt_order"
            app:layout_constraintTop_toTopOf="@id/txt_order"
            app:layout_constraintBottom_toBottomOf="@id/txt_order"/>
        <TextView
            android:id="@+id/txt_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최신순"
            android:textSize="18sp"
            android:textColor="@color/mainText"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/txt_checkMessageStr"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ListView
            android:id="@+id/lv_existMessagePeopleList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_order"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>