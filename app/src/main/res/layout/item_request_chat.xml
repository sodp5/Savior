<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="visible"
            android:id="@+id/cl_yourMessageWrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_balloon"
                android:layout_width="230dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/box_fighter_balloon"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/txt_myMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구조대원이 금방 갈테니"
                android:textSize="16sp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="@id/iv_balloon"
                app:layout_constraintTop_toTopOf="@id/iv_balloon"
                app:layout_constraintBottom_toBottomOf="@id/iv_balloon"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:id="@+id/cl_fighterMessageWrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_fighter_balloon"
                android:layout_width="230dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/box_your_balloon"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/txt_fighterMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="살려주세요!!"
                android:textSize="16sp"
                android:layout_marginStart="22dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintStart_toStartOf="@id/iv_fighter_balloon"
                app:layout_constraintTop_toTopOf="@id/iv_fighter_balloon"
                app:layout_constraintBottom_toBottomOf="@id/iv_fighter_balloon"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>