<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashActivity"
    android:background="@color/mainColor">
    <TextView
        android:id="@+id/txt_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="화재현장 구조도움서비스"
        android:textSize="16sp"
        android:textColor="@color/subText"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@id/iv_textLogo"
        app:layout_constraintBottom_toTopOf="@id/iv_textLogo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="소방대원용"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toEndOf="@id/txt_explain"
        app:layout_constraintBottom_toTopOf="@id/iv_textLogo"/>
    <ImageView
        android:id="@+id/iv_textLogo"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:src="@drawable/txt_savior_logo"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.25"/>
    <ImageView
        android:layout_width="230dp"
        android:layout_height="300dp"
        android:src="@drawable/character_firebat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"/>

</androidx.constraintlayout.widget.ConstraintLayout>